<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- External storage root -->
    <external-path name="external_files" path="." />

    <!-- External app-specific files -->
    <external-files-path name="external_app_files" path="." />

    <!-- CollegeHub downloads directory -->
    <external-files-path name="collegehub_downloads" path="CollegeHub/Downloads" />

    <!-- External cache -->
    <external-cache-path name="external_cache" path="." />

    <!-- Internal app files -->
    <files-path name="internal_files" path="." />

    <!-- Cache directory for temporary files -->
    <cache-path name="cache" path="." />

    <!-- Downloads directory -->
    <external-files-path name="downloads" path="Download" />

    <!-- Pictures directory for chat images -->
    <external-files-path name="pictures" path="Pictures" />

    <!-- Documents directory for chat files -->
    <external-files-path name="documents" path="Documents" />

    <!-- Root path for full storage access -->
    <root-path name="root" path="." />
</paths>